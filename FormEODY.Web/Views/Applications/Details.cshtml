@model FormEODY.Web.Models.ApplicationViewModel

<h2>Application Details</h2>

<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Gender:</strong> @Model.Gender</p>
<p><strong>Single:</strong> @(Model.Single ? "Yes" : "No")</p>
<p><strong>Occupation:</strong> @Model.OccupationName</p>
<p><strong>Message:</strong> @Model.Message</p>

<a asp-action="Index" class="btn btn-secondary btn-sm me-2">Back to List</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Edit</a>
