@model List<FormEODY.DataAccess.Entities.Application>

<h2>Applications</h2>

<a asp-action="Create" style="margin-bottom:15px; display:inline-block;">
    âž• New Application
</a>

@if (TempData["Success"] != null)
{
    <div style="background-color:#d4edda; color:#155724; padding:10px; margin-bottom:15px; border:1px solid #c3e6cb;">
        @TempData["Success"]
    </div>
}

<table border="1" cellpadding="6" cellspacing="0" style="border-collapse:collapse; width:100%;">
    <thead style="background:#f2f2f2;">
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Single</th>
            <th>Occupation</th>
            <th>Message</th>
            <th style="width:160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Count > 0)
    {
        foreach (var a in Model)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Gender</td>
                <td>@(a.Single ? "Yes" : "No")</td>
                <td>@a.Occupation</td>
                <td>@a.Message</td>
                <td>

                    <!-- View -->
                    <a asp-action="Details" asp-route-id="@a.Id">View</a> |

                    <!-- Edit -->
                    <a asp-action="Edit" asp-route-id="@a.Id">Edit</a> |

                    <!-- Delete -->
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@a.Id" />
                        <button type="submit"
                                onclick="return confirm('Are you sure you want to delete this application?');"
                                style="background:none; border:none; color:red; cursor:pointer;">
                            Delete
                        </button>
                    </form>

                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" style="text-align:center; color:gray;">
                No applications found.
            </td>
        </tr>
    }
    </tbody>
</table>
