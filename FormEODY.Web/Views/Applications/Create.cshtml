@model FormEODY.DataAccess.Entities.Application
@using FormEODY.DataAccess.Entities

<h2>Create Application</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" style="color:red"></span>
    </div>

    <div>
        <label>Gender</label><br />
        <label>
            <input type="radio" asp-for="Gender" value="@Gender.Male" /> Male
        </label>
        <label>
            <input type="radio" asp-for="Gender" value="@Gender.Female" /> Female
        </label>
        <br />
        <span asp-validation-for="Gender" style="color:red"></span>
    </div>

    <div>
        <label>
            <input asp-for="Single" type="checkbox" /> Single
        </label>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Occupation" class="form-label"></label>
        <select asp-for="Occupation" class="form-control">
            <option value="">-- Select Occupation --</option>
            <option value="Doctor">Doctor</option>
            <option value="Nurse">Nurse</option>
        </select>
        <span asp-validation-for="Occupation" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Message"></label><br />
        <textarea asp-for="Message"></textarea>
        <span asp-validation-for="Message" style="color:red"></span>
    </div>

    <button type="submit">Save</button>
</form>

<a asp-action="Index">Back to List</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
